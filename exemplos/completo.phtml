<function name='fatorial' return='int'>
  <params>
    <param type='int'>n</param>
  </params>
  <var type='int'>resultado</var>
  <assign var='resultado'>1</assign>
  
  <if cond='n <= 0'>
    <return>1</return>
  </if>
  <else>
    <var type='int'>i</var>
    <assign var='i'>1</assign>
    <while cond='i <= n'>
      <assign var='resultado'>resultado * i</assign>
      <assign var='i'>i + 1</assign>
    </while>
  </else>
  
  <return>resultado</return>
</function>

<function name='contarAte' return='void'>
  <params>
    <param type='int'>limite</param>
  </params>
  <var type='int'>i</var>
  <assign var='i'>1</assign>
  
  <while cond='i <= limite'>
    <print>i</print>
    <assign var='i'>i + 1</assign>
  </while>
</function>

<function name='verificarPar' return='bool'>

<function name='divisao' return='float'>
  <params>
    <param type='float'>a</param>
    <param type='float'>b</param>
  </params>
  <var type='float'>resultado</var>
  <if cond='b != 0.0'>
    <assign var='resultado'>a / b</assign>
  </if>
  <else>
